<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= @entry.created_at.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_type %>
      </p>

      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>
      <div class="panel-block">
        Proteins: <%= @entry.proteins %>
      </div>
      <div class="panel-block">
        Carbohydrates: <%= @entry.carbs %>
      </div>
      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to "Back", entries_path, class: "button is-gray" %>
        <%= link_to "Delete", entry_path(@entry), data: { turbo_method: "delete", turbo_confirm: "Sure or not?" }, class: "button is-danger is-light" %>
      </div>
      <div class="column">
<!--        add smth -->
      </div>
    </div>

  </div>

</div>

