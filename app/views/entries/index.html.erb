<!--<h1>Entries</h1>-->
<% content_for :title do %>
  Meal Log &ndash; <%= DateTime.now.strftime("%d/%m/%Y %H:%M") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Meal Type</th>
      <th>Calories</th>
      <th>Proteins</th>
      <th>Carbohydrates</th>
      <th>Fats</th>
      <th colspan="3"></th>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
    <tr>
      <td><%= entry.meal_type %></td>
      <td><%= entry.calories %></td>
      <td><%= entry.proteins %></td>
      <td><%= entry.carbs %></td>
      <td><%= entry.fats %></td>
      <td><%= link_to "Show Entry", entry %></td>
      <td><%= link_to "Edit Entry", edit_entry_path(entry) %></td>
      <td><%= link_to "Delete Entry", entry, method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

